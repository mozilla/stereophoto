<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <platform name="firefoxos">
        <icon height="128" src="icon/icon-128.png" width="128" />
        <icon height="60" src="icon/icon-60.png" width="60" />
    </platform>
    <name>stereoPhoto</name>
    <description>
		Create and watch stereoscopic photography 
	</description>
    <author email="pzalewa@mozilla.com" href="http://blog.zalewa.info">
		Piotr Zalewa - Mozilla
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
